@media print {

  body {
    font-size: 14px;
  }

  //stuff to hide

  .letter_top_greeting,
  .letter_bottom_farewell,
  .top-navigation,
  .surround-lang,
  #footer,
  .more_lesson_plans,
  .btn-lesson-expand {
    display: none;
  }

  // Overwrite default link writing behavior (from bootstrap print)

  a[href]:after {
    content: "";
  }

  // Print external links that are not to cdrhmedia 

  a[href^="http"]:not([href*="cdrhmedia.unl.edu"]):after {
    content: " (" attr(href) ")";
    word-wrap: break-word;
  }

  //tighten up margins

  h1, h2, h3, h4, h5, h6, 
  .h1, .h2, .h3, .h4, .h5, .h6, 
   {
    padding: 0 !important;
    margin: 0 !important;
    margin-top: .5em !important;
    margin-bottom: .5em !important;
  }

  .well {
    overflow: auto;
    break-inside: auto !important;
    padding: .2em .6em;
  }

  .lesson_section, .lesson_item {
    padding-top: .5em !important;
    padding-bottom: .5em !important;
  }

  // dsplay collapsed items

  .collapse {
    display:block;
  }

  // change border color to gray

  h3.lesson_section, .lesson_item {
    border-color: #aaa !important;
  }

  // Duplicating bootstrap grid functionality so items will appear side by side

  .row {
    // margin-right: -15px;
    // margin-left: -15px;
  }

  .row:before, .row:after {
    display: table;
    content: " ";
  }

  .row:after {
    clear: both;
  }

  // We are only using col-md-6 in lessons

  .col-md-6 {
    width: 50%;
    float: left;
    position: relative;
    min-height: 1px;
    padding-right: 15px;
    padding-left: 15px;
