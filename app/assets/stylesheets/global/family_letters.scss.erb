// I thought these would be available from boostraps _variables but apparently not  

$blue: #3c5881;
$greybeige: #cdcac6;
$warmbeige: #efe5cc;
$warmblack: #434444;
$brightrose: #bd435b;
$dustyrose: #cf838d;
$light_blue: #79b1e0; //notebook line              

$screen-sm-min: 768px !default;
$screen-md-min: 992px !default;
$screen-lg-min: 1200px !default;

$font-family-sans-serif: "Helvetica Neue", Helvetica, Arial, sans-serif;
$font-family-serif: 'Cormorant', "Times New Roman", Georgia, Times, serif;
$font-family-serif-heads: 'Vollkorn SC', Georgia, "Times New Roman", Times, serif;

$light-base: lighten($greybeige, 17%);

$link-color:            $brightrose !default;
$link-hover-color:      darken($link-color, 15%) !default;

$link-underline: lighten($light-blue, 15%);
$link-underline-hover: lighten($blue, 15%);


// ----------
// Text/Gen Styles
// ----------

body img {
  max-width: 100%;
}

// Using box-shadow for link so I can set the color & width
a, .link_style {
  -webkit-box-shadow: inset 0 -.15em 0 $link-underline;
  box-shadow: inset 0 -.15em 0 $link-underline;
  color: $link-color; // duplicating bootstrap for .link_style
}

a:hover, .link_style:hover, .link_style:active {
  -webkit-box-shadow: inset 0 -.15em 0 $link-underline-hover;
  box-shadow: inset 0 -.15em 0 $link-underline-hover;
  text-decoration: none;
  color: $link-hover-color; // duplicating bootstrap for .link_style
}

// Remove styles from buttons, etc.
a.btn, .footer_logo a, .nav a, .site-title-container a, .pagination a, a.searchResults {
  -webkit-box-shadow: none;
  box-shadow: none;
}

.panel-default .panel-heading {
  background-color: #fff;
}

// Letter Pre and Postscripts Design Elements
.letter_top_greeting, .letter_bottom_farewell {
  border: 2px solid $light_blue;
  border-left: none;
  border-right: none;
  margin-top: 1em;
}

.letter_top_greeting .container img
{
  margin-top: -1.1em;
}
.letter_bottom_farewell .container img {
  margin-top: -1em;
}

// No media, smallest
.letter_top_greeting, .letter_bottom_farewell {
  height: 3.9vw;
}

@media (min-width: $screen-sm-min) {
  .letter_top_greeting {
    height: 1.3em;
  }
  .letter_bottom_farewell {
    height: 1em;
  }
  .letter_top_greeting .container img
  {
    margin-top: -.9em;
  }
  .letter_bottom_farewell .container img {
    margin-top: -.8em;
  }
}

@media (min-width: $screen-md-min) {
  .letter_top_greeting {
    height: 1.9em;
  }
  .letter_bottom_farewell {
    
  }
}

@media (min-width: $screen-lg-min) {
  .letter_top_greeting {
    height: 2.5em;
  }
  .letter_bottom_farewell {
    height: 1.4em;
  }
}

// Overwriting bootstrap when variables doens't cut it

.modal-footer {
  text-align: center;
}

.lead {font-size: 1.2em;}

// ----------
// Header
// ----------

#header {
  margin-top: .5em;

}

// Top Nav
@media (min-width: $screen-sm-min) {
  .layouts_cell {text-align: right;}
}

// Header and Nav
.title_nav {
  background: image-url("flowers.png") no-repeat left bottom;
  background-size: 17%; //must go after background
  font-size: 1em;
  line-height: 1em;
  margin: 1em auto 0em auto;
  text-align: center;
}

@media (min-width: $screen-md-min) {
  .title_nav_sub {
    margin-left: 7em;
  }
}

// Site Title
.site-title-container a {
  display: block;
}

.site-title-container a, .site-title-container .h1, .site-title-container .h2 {
  color: $blue;
  line-height: .8em
}

.site-title-container a:hover .h1, .site-title-container a:hover .h2 {
  color: lighten($blue, 20%);
}

.site-title-container .h2 {
  font-family: $font-family-serif;
  font-size: 1.7em;
  margin-top: -.2em;
}

//Navbar
.navbar-main {
  display: flex;
  flex-wrap: wrap;
  font-size: 1.3em;
  justify-content: center;
  margin-top: .5em;
  width: 100%;
  a {
    -webkit-box-shadow: inset 0 -.55em 0 $link-underline;
    box-shadow: inset 0 -.55em 0 $link-underline;
    background-color: $light-base;  
    transition: box-shadow .4s;
    -moz-transition: box-shadow .4s;
    -o-transition: box-shadow .4s;
    -webkit-transition: box-shadow .4s;
  }
  a:hover {
    -webkit-box-shadow: inset 0 -1.9em 0 $link-underline;
    box-shadow: inset 0 -1.9em 0 $link-underline;
    background-color: $light-base;  
  }
}

.navbar-main .active {
  a {
    -webkit-box-shadow: inset 0 -.55em 0 $link-underline-hover;
    box-shadow: inset 0 -.55em 0 lighten($link-underline-hover, 12%);
  }
  a:hover { // Need to leave these or the animation doesn't work
    -webkit-box-shadow: inset 0 -1.9em 0 $link-underline;
    box-shadow: inset 0 -1.9em 0 $link-underline; 
  }
}

.navbar-main li {
  margin: 0 .5em;

}

// ----------
// Footer
// ----------

#footer {
  background-color: lighten($greybeige, 28%);
  margin: 2em 0;
  padding: 2em 0 0em 0;
  text-align: center;

}

.footer_logo {
  margin: 2em 0 2em 0;
}

