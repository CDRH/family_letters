// ----------
// Page styles
// ----------

// Explore
// -------

.explore_index_headers {
  border-top: solid .5em lighten($greybeige, 28%);
  padding-top: .5em;
  margin-top: 2em;
  text-align: center;
}

.explore_essay_callout {
  background-image: url("<%= iiif("shan_d.376.jpg", size: "!1000,1000") %>");
  background-position:center;
  background-size:120%;
  min-height:10em;
}
.explore_essay_callout a {
  background-color: rgba($light-base, .85);
  display: block;
  font-size: 1.9em;
  line-height: 1.2;
  padding: .5em;
}

.explore_band {
  margin-top: -2.5em;
}

// Set images for Exhibit Callouts
.explore_callout1 {
  background-image: url("<%= iiif("shan_d.481.jpg", region: "pct:20,15,60,60", size: "!1000,1000") %>");
  border-bottom-width:2px
}
.explore_callout2 {
  background-image: url("<%= iiif("shan_p.183.jpg", region: "pct:20,15,60,60", size: "!1000,1000") %>");
  border-bottom-width:2px;
  border-top-width:2px
}
.explore_callout3 {
  background-image: url("<%= iiif("shan_p.087.jpg", region: "pct:20,30,60,70", size: "!1000,1000") %>");
  border-bottom-width:2px;
  border-top-width:2px
}
.explore_callout4 {
  background-image: url("<%= iiif("shan_l.242.jpg", region: "pct:9,0,60,30", size: "!1000,1000") %>");
  border-top-width:2px
}

@media (min-width: 750px) {
  .explore_callout1 {
    border-right-width:2px
  }
  .explore_callout2 {
    border-bottom-width:4px;
    border-right-width:2px
  }
  .explore_callout3 {
    border-left-width:2px;
    border-top-width:4px
  }
  .explore_callout4 {
    border-left-width:2px
  }
}

.explore_callout {
  border:4px solid $light-base;
  display:block;
  font-size:1.2em;
  height:10em
}
.explore_callout .explore_inner {
  background-color:rgba($light-base, 0.25);
  height:100%
}
.explore_callout:focus .explore_inner,
.explore_callout:hover .explore_inner {
  background-color:transparent
}

a.content {
  background-position:center;
  background-size:100%;
  display:block;
  margin-left:-15px;
  margin-right:-15px;
  overflow:hidden;
  padding:0;
  -webkit-box-shadow: none;
  box-shadow: none;
}
a.content:focus,
a.content:hover {
  background-position:center;
  background-size:120%;
  transition:all 0.5s;
  -webkit-transition:all 0.5s;
  -o-transition:all 0.5s;
  -moz-transition:all 0.5s
}
a.content:focus .inner_content,
a.content:hover .inner_content {
  border-bottom:10px solid $light-blue;
  padding-top:1.5em
}
a.content .row {
  margin-left:15px;
  margin-right:15px
}
a.content .inner_content {
  color: $warmblack;
  background-color:rgba($light-base,0.85);
  padding:.5em;
  transition:padding 0.5s;
  -moz-transition:padding 0.5s;
  -o-transition:padding 0.5s;
  -webkit-transition:padding 0.5s
}

// Galleries

.exhibit_gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.exhibit_gallery_item {
  flex-basis: 20%;
  padding: 10px;
  line-height: 1.1em;
  font-size: .9em;
}

.exhibit_gallery_image {
  margin-bottom: .3em;
  img {
    min-width: 150px;
  }
}

.gallery_heading {
  border-top: solid .5em lighten($greybeige, 28%);
  padding-top: .5em;
}

// Search
// ------

.searchResults {
  border-bottom: 3px solid $greybeige;
  display: flex;
  padding: 1em 0 0 0;
  color: $warmblack; //overwrite link color
  &:hover {
    background-color: lighten($greybeige, 28%);
    color: $warmblack; //overwrite link color
  }
}

.search_results_image {
  flex-basis: 150px;
  margin: 0 20px 1em 0;
  text-align: right;
}

.search_results_info {
  flex: 2;
}

.search_item_info {
  display: flex;
  flex-wrap: wrap;
  font-size: .9em;
  line-height: 1.2em;
}

.search_item_metadata {
  flex: 2;
  margin: .8em .5em 1em 0;
  padding: 0;
  li {
    list-style-type: none;
  }
}

.search_results_text {
  flex: 5;
  padding-top: .5em;
}

.search_results_text .search_results_highlights:not(:first-of-type) {
    border-top: 4px solid lighten($greybeige, 10%);
}

// Individual Items
// ----------------

// Page images
span.pageimage {
  border-bottom: 2px solid #aaa;
  border-left: 2px solid #aaa;
  border-right: 2px solid #aaa;
  clear: both;
  float: right;
  margin: 0;
  padding: 0;
}

.hr {
  border-top: 2px solid #aaa; 
  clear: right;
  display: block;
  height: 0;
  margin: 10px 0 0 0;
  padding: 0px 0 0 0;
  width: 100%;
}

// Items populated from spreadsheet

.image_item_display {
  background-color: #fff;
  border: solid 3px $greybeige;
  border-left: 0;
  border-right: 0;
  margin-bottom: 1em;
  padding: 1em;
  text-align: center;
}


// Home Page
// ---------

// Header

.site_home {
  .home-site-title {
    // Shadow for when title overlaps flowers
    text-shadow: 2px 2px 3px $light-base,
                 -2px 2px 3px $light-base,
                 -2px -2px 3px $light-base,
                 2px -2px 3px $light-base,
                 2px 2px 6px $light-base,
                 -2px 2px 6px $light-base,
                 -2px -2px 6px $light-base,
                 2px -2px 6px $light-base;
  }

  .title_nav {
    background-size: 25%;
  }
}

@media (min-width: $screen-sm-min) {
  // Enlarge primary title for tablet and larger
  .home-site-title-primary {
    font-size: 1.4em;
    margin-bottom: 1.7em;
  }
}

@media (min-width: $screen-md-min) {
  .site_home {
    .title_nav_sub {
      margin-left: 16em;
    }

    .title_nav {
      background-size: contain;
    }
  }
}
