@import "bootstrap-variables";

blockquote {
  font-size: 1em;
}

h3.lesson_section {
  border-top: $dustyrose solid 4px;
  margin-top: 50px;
  padding-top: 50px;
}

/* lesson callouts */

/* using "background-position: bottom" gives it a cool swooping effect when you hover */
a.callout_1 {
  background-image: url("<%= iiif("shan_p.330.jpg", region: "pct:30,30,70,70", size: "!1000,1000") %>");
}
a.callout_2 {
  background-image: url("<%= iiif("shan_p.233.jpg", region: "pct:12,0,70,70", size: "!1000,1000") %>");
}
a.callout_3 {
  background-image: url("<%= iiif("shan_d.165.jpg", region: "pct:20,20,70,65", size: "!1000,1000") %>");
  background-position: bottom;
}
a.callout_4 {
  background-image: url("<%= iiif("shan_p.304.jpg", region: "pct:9,0,60,55", size: "!1000,1000") %>");
}
a.callout_5 {
  background-image: url("<%= iiif("shan_d.059.jpg", region: "pct:20,15,60,60", size: "!1000,1000") %>");
  background-position: bottom;
}

ol {
  &.alpha {
    list-style-type: upper-alpha;
  }
  &.materials {
    list-style-type: upper-roman;
  }
  &.numbered {
    list-style-type: decimal;
  }
}

ul {
  &.focus {
    list-style-type: circle;
  }
  &.objectives {
    list-style-type: square;
  }
}

.poetry {
  margin-left: 40%;
  margin-bottom: 40px;

  .indent {
    text-indent: 40px;
  }
}

.well {
  background-color: $gray-lighter;
  margin-bottom: 40px;
  margin-top: 40px;
}
