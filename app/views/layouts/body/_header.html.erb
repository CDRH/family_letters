<div id="header">
  <div class="container">
    <div class="row">
      <div class="col-sm-7">
        <%= link_to t("home.title"), home_path, class: "btn btn-link", role: "button" %>
        <%= link_to t("browse.title"), browse_path, class: "btn btn-link", role: "button" %>
        <%= link_to t("search.title"), search_path, class: "btn btn-link", role: "button" %>
        <%= link_to t("about.title"), about_path, class: "btn btn-link", role: "button" %>
      </div>
      <div class="col-sm-5 layouts_cell">
        <%# Calls modal %>
        <button class="btn btn-link" data-toggle="modal" data-target="#dedication">
          <%= t "general.dedication_button" %>
        </button>
        <%= render "layouts/body/languages" %>
      </div>
    </div>
  </div>

  <div class="letter_top_greeting">
    <div class="container">
      <%= image_tag "letter_top_greeting.png" %>
    </div>
  </div>
  <div class="container title_nav">
    <div class="title_nav_sub">
      <% if current_page? home_path %>

        <div class="site-title-container home-site-title home-site-title-primary">
          <div class="site-title h1"><%= t "general.project_name" %></div>
          <div class="site-subtitle h2"><%= t "general.project_subtitle" %></div>
        </div>
        
        <% if I18n.locale == :en %>
        <%# TODO: I think this could be optimised a bit further still, but leaving it as is for now %>

          <div class="site-title-container home-site-title home-site-title-secondary">
            <div class="site-title h1"><%= t "general.project_name", locale: :es %></div>
            <div class="site-subtitle h2"><%= t "general.project_subtitle", locale: :es %></div>
          </div>

        <% else %>

          <div class="site-title-container home-site-title home-site-title-secondary">
            <div class="site-title h1"><%= t "general.project_name", locale: :en %></div>
            <div class="site-subtitle h2"><%= t "general.project_subtitle", locale: :en %></div>
          </div>

        <% end %>

      <% else %>
        <%= link_to home_path do %>
          <div class="site-title-container">
            <div class="site-title h1"><%= t "general.project_name" %></div>
            <div class="site-title h2"><%= t "general.project_subtitle" %></div>
          </div>
        <% end %>
      <% end %>

      <%= render "layouts/body/navbar" %>
      <%= render "layouts/body/breadcrumbs" %>
    </div> <%# /title_nav_sub %>
  </div> <%# /container %>
</div> <%# /header %>
