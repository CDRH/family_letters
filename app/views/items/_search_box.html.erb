<%# overrides orchid in order to include text_search_type %>
<div class="searchbox">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= form_tag search_path, method: "get" do %>
        <div class="row">
          <div class="col-md-12">
            <div class="search_main_text input-group">
                <!-- search box -->
                <%= text_field_tag "q", params["q"], placeholder: "Search for...", class: "form-control" %>
                <!-- add existing search parameters to query -->
                <%= render "hidden_fields" %>
                <!-- submit -->
                <span class="input-group-btn">
                  <%= submit_tag "Search", class: "btn btn-primary", name: nil, data: { disable_with: false } %>
                </span>
            </div><!-- /search_main_text -->
            <div class="form-inline">
              <%= render "text_search_type" %>
            </div>
          </div>
        </div> <!-- /row -->
      <% end %> <!-- /form -->
      <%= render "help" %>
    </div> <!-- /panel-body -->
  </div> <!-- /panel -->
</div><!-- /searchbox -->
