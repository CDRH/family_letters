<h1><% t "browse.title", default: "Browse" %></h1>

<p>
  <%= link_to t("browse.all_link", default: "All Items in the Archive"), prefix_path("search_path"),
        class: "btn btn-lg btn-default", rel: "search" %>
</p>

<h3><%= t "browse.browse_type", default: "Browse by" %>:</h3>
<% @page_facets.each_slice(3) do |slice| %>
  <div class="row buffer-bottom-lg">
    <% slice.each do |(facet_name, facet_info)| %>
      <div class="col-md-4">
        <% id = facet_name.parameterize(separator: ".") %>
        <%= link_to prefix_path("browse_facet_path", facet: id),
          html_options = {class: "btn btn-lg btn-block btn-primary"} do %>
          <%= facet_info["label"] %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to item_path(id: "shan.P152"), class: "research_image" do %>
  <%= image_tag iiif("shan_p.304.jpg/", size: "!800,800"), class: "research_image" %>
<% end %>
